    <script>

        var reelItems = [
                { x: 0, y: 110 * 0 },
                { x: 0, y: 110 * 5 },
                { x: 0, y: 110 * 6 },
                { x: 0, y: 110 * 3 },
                { x: 0, y: 110 * 1 },
